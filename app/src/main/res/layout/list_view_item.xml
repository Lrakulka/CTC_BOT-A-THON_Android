<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="15dp" android:paddingEnd="15dp">


    <EditText
        android:id="@+id/product_quantity"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:inputType="numberSigned"
        android:digits="0123456789"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/product_quantity"
        android:padding="3dp"
        android:src="@android:drawable/ic_dialog_info" />


    <TextView
        android:id="@+id/product_barcode"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/product_quantity"
        android:layout_toLeftOf="@+id/product_image"
        android:layout_toRightOf="@+id/product_quantity"
        android:layout_toStartOf="@+id/product_image"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/product_barcode"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/product_quantity"
        android:layout_toLeftOf="@+id/product_image"
        android:layout_toRightOf="@+id/product_quantity"
        android:layout_toStartOf="@+id/product_image"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"/>

</RelativeLayout>